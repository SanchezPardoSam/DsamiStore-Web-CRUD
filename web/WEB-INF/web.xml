<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Controlador</servlet-name>
        <servlet-class>Servlets.Controlador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UsuarioControlador</servlet-name>
        <servlet-class>Servlets.UsuarioControlador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginControlador</servlet-name>
        <servlet-class>Servlets.AuthControlador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductoControlador</servlet-name>
        <servlet-class>Servlets.ProductoControlador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProveedorControlador</servlet-name>
        <servlet-class>Servlets.ProveedorControlador</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RolControlador</servlet-name>
        <servlet-class>Servlets.RolControlador</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Controlador</servlet-name>
        <url-pattern>/Controlador</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UsuarioControlador</servlet-name>
        <url-pattern>/UsuarioControlador</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginControlador</servlet-name>
        <url-pattern>/LoginControlador</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductoControlador</servlet-name>
        <url-pattern>/ProductoControlador</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProveedorControlador</servlet-name>
        <url-pattern>/ProveedorControlador</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RolControlador</servlet-name>
        <url-pattern>/RolControlador</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            3600
        </session-timeout>
    </session-config>
</web-app>
